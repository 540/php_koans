<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/7.0/phpunit.xsd"
    colors="true"
    processIsolation="false"
    stopOnError="true"
    printerClass="KoansLib\KoanPrinter"
    stopOnFailure="true"
>

    <testsuites>
        <testsuite name="PHPKoans">
            <directory suffix="Koans.php">koans/</directory>
            <file>AssertKoans.php</file>
            <file>StringKoans.php</file>
            <file>StringManipulationKoans.php</file>
        </testsuite>
    </testsuites>

</phpunit>