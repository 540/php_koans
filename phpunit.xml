<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/7.0/phpunit.xsd"
    colors="true"
    processIsolation="false"
    stopOnError="true"
    stopOnFailure="true">

    <testsuites>
        <testsuite name="PHP Koans">
            <directory suffix="Koans.php">koans/</directory>
        </testsuite>
    </testsuites>

</phpunit>